<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_height"
        android:background="@color/tabbar_background_color">
        <Refractored.Controls.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/circle_image_view_heigth_width"
            android:layout_height="@dimen/circle_image_view_heigth_width"
            android:layout_gravity="right"
            app:civ_fill_color="@color/text_color_white"
            android:layout_margin="@dimen/circle_image_view_margin_right"
            android:id="@+id/civAvatar" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="asd"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/tabbar_text_size"
            android:id="@+id/tvUserName"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/textview_dashboard_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/textview_padding_left_right"
                android:paddingRight="@dimen/textview_padding_left_right"
                android:paddingTop="@dimen/textview_padding_top_bottom"
                android:paddingBottom="@dimen/textview_padding_top_bottom"
                android:textSize="@dimen/text_description_size"
                android:textStyle="bold"
                android:textColor="@color/text_color_blue" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/textview_padding_left_right"
                android:paddingRight="@dimen/textview_padding_left_right"
                android:paddingTop="@dimen/textview_padding_top_bottom"
                android:paddingBottom="@dimen/textview_padding_top_bottom"
                android:textSize="@dimen/text_description_size"
                android:background="@color/item_background_color"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/text_color_blue"
                android:drawableRight="@drawable/icon_textview_budget"
                android:id="@+id/tvBudget" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/textview_margin_top_bottom"
                android:paddingLeft="@dimen/textview_padding_left_right"
                android:paddingRight="@dimen/textview_padding_left_right"
                android:paddingTop="@dimen/textview_padding_top_bottom"
                android:paddingBottom="@dimen/textview_padding_top_bottom"
                android:textSize="@dimen/text_description_size"
                android:background="@color/item_background_color"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/text_color_blue"
                android:drawableRight="@drawable/icon_textview_events"
                android:id="@+id/tvEvents" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/textview_margin_top_bottom"
                android:paddingLeft="@dimen/textview_padding_left_right"
                android:paddingRight="@dimen/textview_padding_left_right"
                android:paddingTop="@dimen/textview_padding_top_bottom"
                android:paddingBottom="@dimen/textview_padding_top_bottom"
                android:textSize="@dimen/text_description_size"
                android:background="@color/item_background_color"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/text_color_blue"
                android:drawableRight="@drawable/icon_textview_upcoming_event"
                android:id="@+id/tvUpcomingEvent" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/textview_padding_left_right"
                    android:paddingBottom="@dimen/textview_padding_top_bottom"
                    android:textSize="@dimen/text_description_size"
                    android:text="Version: 1.0" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>