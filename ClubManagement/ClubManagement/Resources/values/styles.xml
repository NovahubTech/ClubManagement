<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:windowFullscreen">false</item>
  </style>

  <style name="TabLayoutThemes" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorColor">#ffffff</item>
    <item name="tabIndicatorHeight">2dp</item> 
    <item name="tabSelectedTextColor">@color/text_color_white</item>
  </style>

  <style name="ProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
    <item name="android:progressBackgroundTint">#999999</item>
    <item name="android:progressTint">@color/color_red</item>
    <item name="android:minWidth">200dp</item>
  </style>
</resources>